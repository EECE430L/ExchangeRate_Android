<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersIReceivedFragment">

    <ListView
        android:id="@+id/offers_i_received_ListView"
        android:layout_width="412dp"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

    <TextView
        android:id="@+id/received_offers_placeholder_TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/roboto_slab"
        android:gravity="center"
        android:padding="16dp"
        android:text="Sorry, you have not received any offers yet. Please check back later."
        android:textColor="@color/dark_blue"
        android:textSize="25sp"
        android:textStyle="bold" />

</FrameLayout>